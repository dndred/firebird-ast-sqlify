generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model colors {
  colorId   Int     @id
  colorname String
  items     items[]
}

model sizes {
  sizeid   Int    @id
  sizename String
}

model items {
  itemid   Int     @id
  colorId  Int
  priceOpt Decimal @map("priseOpt")
  color    colors  @relation(fields: [colorId], references: [colorId], onDelete: Cascade)
}
